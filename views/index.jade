doctype html
html(ng-app="nas")
  head
    title= title
    != env.getManifestFiles("app")
  body
    div(ng-controller="FilesCtrl")
      div.navbar.navbar-default.navbar-fixed-top
        div.container
          div.navbar-header
            a.navbar-brand(href="./")= title
            a.navbar-text /{{path}}

      div.container
        table.table.table-hover
          thead
            tr
              th Name
              th Size
              th Modified
          tbody
            tr(ng-repeat="file in files")
              td {{file.name}}
              td {{(file.size / 1024) | number:2}} KB
              td {{file.modifiedTime | date:'medium'}}

        footer
          ul.list-unstyled
            li.pull-right
              a(href="#top") Back to top
          p Made by SungHo Kim. Contact him at <a href='mailto:likeleon@gmail.com'>likeleon@gmail.com</a>.
